            android:layout_width="100dp"
            android:layout_height="38dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/order_edittext_border"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/black"
            android:text="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView72411" />

        <TextView
            android:id="@+id/textView72411"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="Масштаб"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/xAxisOrderParametersEditText" />

        <EditText
            android:id="@+id/zAxisOrderParametersEditText"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/order_edittext_border"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/black"
            android:paddingEnd="14dp"
            android:text="100"
            app:layout_constraintStart_toEndOf="@+id/yAxisOrderParametersEditText"
