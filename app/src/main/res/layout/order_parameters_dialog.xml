        <EditText
            android:id="@+id/yAxisOrderParametersEditText"
            android:layout_width="100dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/order_edittext_border"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/black"
            android:paddingEnd="14dp"
            android:text="100"
            app:layout_constraintStart_toEndOf="@+id/xAxisOrderParametersEditText"
            app:layout_constraintTop_toBottomOf="@+id/textView42411" />

        <TextView
            android:id="@+id/textView42411"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="Розмір"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blueColorOrderParametersButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/blueColorOrderParametersButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/order_parameters_btn_unpressed"
            android:text="Синій"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blackColorOrderParametersButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/redColorOrderParametersButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/order_parameters_btn_unpressed"
            android:text="Червоний"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:layout_marginStart="38dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView423411"
            app:layout_constraintStart_toEndOf="@+id/whiteColorOrderParametersButton"
            tools:layout_editor_absoluteY="381dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/whiteColorOrderParametersButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/order_parameters_btn_unpressed"
            android:text="Білий"
            android:layout_marginStart="38dp"
            android:textColor="@color/black"
            android:textAllCaps="false"
            app:layout_constraintStart_toEndOf="@+id/blackColorOrderParametersButton"
            app:layout_constraintTop_toBottomOf="@+id/textView423411" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/blackColorOrderParametersButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/order_parameters_btn_unpressed"
            android:text="Чорний"
            android:textColor="@color/black"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView423411" />

        <TextView
            android:id="@+id/textView42341"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="Тип матеріалу"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orderParametersPrintTypeSpinner" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/orderPlaButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/order_parameters_btn"
            android:text="PLA"
            android:layout_marginStart="38dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/orderAbsButton"
            app:layout_constraintTop_toBottomOf="@+id/textView42341" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/orderAsaButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/order_parameters_btn"
            android:text="ASA"
            android:layout_marginStart="38dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/orderPlaButton"
            app:layout_constraintTop_toBottomOf="@+id/textView42341"
            tools:layout_editor_absoluteX="300dp" />

        <TextView
            android:id="@+id/textView423411"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="Колір"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/orderAbsButton" />

        <TextView
            android:id="@+id/textView423"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Тип друку"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
