<resources xmlns:tools="http://schemas.android.com/tools">
    <attr name="arrowDownFillColor" format="reference|color" />
    <!-- Base application theme. -->
    <style name="Theme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_purple_theme</item>
        <item name="colorOnPrimary">@color/purple</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="arrowDownFillColor">@color/black</item>
        <!-- Добавьте остальные элементы темы -->
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">?attr/arrowDownFillColor</item>
        <item name="colorControlActivated">?attr/colorOnPrimary</item>
    </style>

    <style name="CustomRangeSlider" parent="@style/Widget.MaterialComponents.Slider">
        <!-- Цвет ползунков -->
        <item name="thumbColor">@color/white</item>
        <item name="thumbStrokeWidth">1dp</item>
        <item name="thumbStrokeColor">@color/gray</item>

        <!-- Цвет полоски между ползунками -->
        <item name="trackColorActive">@color/blue</item>
        <item name="trackColorInactive">@color/gray</item>
        <item name="trackHeight">10dp</item>
        <item name="labelBehavior">gone</item>

    </style>

</resources>